		<!-- Image Preview Container -->
		<div id="preview-container">
			<button id="close-btn" onclick="closePreview()">Закрыть</button>
			<img id="preview-image" src="" alt="Preview Image" />
		</div>

		<script>
			// Функция открытия предварительного просмотра изображения
			function openPreview(imageSrc) {
				const previewContainer = document.getElementById('preview-container')
				const previewImage = document.getElementById('preview-image')

				previewImage.src = imageSrc
				previewContainer.style.display = 'block'
				document.body.style.overflow = 'hidden' // Запретить прокрутку при отображении предварительного просмотра
			}

			// Функция закрытия предварительного просмотра изображения
			function closePreview() {
				const previewContainer = document.getElementById('preview-container')

				previewContainer.style.display = 'none'
				document.body.style.overflow = 'auto' // Разрешить прокрутку, когда предварительный просмотр скрыт
			}

			document.querySelectorAll('td.note img').forEach(img => {
				img.addEventListener('click', () => {
					openPreview(img.src)
				})
			})
		</script>
